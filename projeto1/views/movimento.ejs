<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movimenta√ß√£o de Estoque</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <!-- Container com largura m√°xima reduzida para melhor apresenta√ß√£o -->
    <section class="container" style="max-width: 600px;">
        <!-- Link para voltar ao menu principal -->
        <a href="/menu" class="voltar">‚Üê Voltar ao Menu</a>

        <br />
        <br />

        <h2>‚ÜîÔ∏è Movimenta√ß√£o de Estoque</h2>
        
        <!-- Se√ß√£o de formul√°rio -->
        <section class="form-section">
            <!-- Formul√°rio que envia dados via POST para /movimento -->
            <form action="/movimento" method="POST">
                
                <!-- Primeira linha: Sele√ß√£o do Produto -->
                <section class="form-row">
                    <section>
                        <!-- Label para o select -->
                        <label>Produto *</label>
                        
                        <!-- Select para escolher qual produto movimentar -->
                        <select name="idproduto" required>
                            <option value="">Selecione o Produto</option>
                            
                            <!-- Loopa pelos produtos e cria uma op√ß√£o para cada -->
                            <% produtos.forEach(p => { %>
                                <!-- Exibe o nome do produto e o saldo atual -->
                                <option value="<%= p.idproduto %>"><%= p.nome %> (Saldo: <%= p.saldo || 0 %>)</option>
                            <% }) %>
                        </select>
                    </section>
                </section>
                
                <!-- Segunda linha: Tipo de Movimento e Quantidade -->
                <section class="form-row">
                    <!-- Select para escolher se √© entrada ou sa√≠da -->
                    <section>
                        <label>Tipo de Movimento *</label>
                        <select name="tipo" required>
                            <option value="">Selecione</option>
                            
                            <!-- Op√ß√£o para ENTRADA (E) -->
                            <option value="E">üì• Entrada</option>
                            
                            <!-- Op√ß√£o para SA√çDA (S) -->
                            <option value="S">üì§ Sa√≠da</option>
                        </select>
                    </section>
                    
                    <!-- Input para quantidade a movimentar -->
                    <section>
                        <label>Quantidade *</label>
                        <!-- Input do tipo number (s√≥ aceita n√∫meros positivos) -->
                        <input type="number" name="quantidade" min="1" placeholder="Quantidade" required>
                    </section>
                </section>
                
                <!-- Bot√£o para registrar o movimento -->
                <button type="submit">‚úÖ Registrar Movimento</button>
            </form>
        </section>

        <!-- Se houver mensagem de sucesso, exibe em verde -->
        <!-- Isto aparece quando movimento √© registrado com sucesso -->
        <% if (message) { %><p class="success">‚úîÔ∏è <%= message %></p><% } %>
        
        <!-- Se houver erro, exibe em vermelho -->
        <!-- Isto aparece quando h√° problema (saldo insuficiente, quantidade inv√°lida, etc) -->
        <% if (error) { %><p class="error">‚ö†Ô∏è <%= error %></p><% } %>

    </section>
</body>
</html>